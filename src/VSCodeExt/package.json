{
  "name": "ladeak-chttp",
  "displayName": "CHttp",
  "description": "Performance Testing HTTP client.",
  "version": "1.0.1",
  "repository": "https://github.com/ladeak/Http3Tools",
  "publisher": "ladeak",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.jpg",
  "license": "MIT",
  "activationEvents": [],
  "homepage": "https://github.com/ladeak/Http3Tools/blob/master/README.md",
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chttp",
        "aliases": [
          "CHTTP",
          "CHttp",
          "chttp"
        ],
        "extensions": [
          ".chttp"
        ],
        "firstLine": "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS|CONNECT|TRACE|DIFF)\\s+(.*?)HTTP/[0-9\\.]+$",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chttp",
        "scopeName": "source.chttp",
        "path": "./syntaxes/http.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "LaDeak-CHttp.sendRequest",
        "title": "Send Request",
        "category": "CHttp"
      },
      {
        "command": "LaDeak-CHttp.cancelRequest",
        "title": "Cancel Request",
        "category": "CHttp"
      },
      {
        "command": "LaDeak-CHttp.diff",
        "title": "CHttp Diff",
        "category": "CHttp"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce-deploy": "vsce package --out chttp-vsce.vsix --target win32-x64",
    "vsce-publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.21.1",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "node-loader": "^2.0.0",
    "node-native-loader": "^1.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "mime-types": "^2.1.14",
    "jsonpath-plus": "^0.20.1",
    "node-api-dotnet": "^0.4.4"
  }
}
